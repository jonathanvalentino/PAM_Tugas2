<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/playlistLayout"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:padding="18dp"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.2"
            android:text="MY MUSIC"
            android:textColor="@color/light_gray"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playlistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Song in Your Phone"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Playlist Button / Queue -->

    <FrameLayout
        android:id="@+id/layoutExpandPlaylist"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/playlistLayout"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/playlistLayout"
        android:layout_weight="1">

        <View
            android:id="@+id/btnExpand"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:background="@drawable/background_icon_center" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_expand"
            app:tint="@color/gray" />
    </FrameLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="30dp"
        android:divider="@color/white"
        android:dividerHeight="1dp"
        android:padding="3dp" />

</RelativeLayout>