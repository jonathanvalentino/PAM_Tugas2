<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongplayerActivity"
    android:background="@color/white">


    <!-- Icon back -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Song Picture -->
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgCover"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius_bottom_left="100dp"
        app:riv_corner_radius_bottom_right="100dp"
        android:src="@drawable/img_cover"
        />


    <!-- Music control (forward, back, play, pause) -->
    <LinearLayout
        android:id="@+id/layoutMusicControl"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:background="@drawable/background_music_control"
        android:elevation="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/imgCover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgCover"
        >

        <ImageView
            android:id="@+id/btnPrevious"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_previous"
            android:layout_weight="1"
            app:tint="@color/gray"
            android:contentDescription="@string/app_name"
            />


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp">
            <View
                android:id="@+id/outlinePlayPause"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background_icon_center" />

            <ImageView
                android:id="@+id/btnPlayPause"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_pause"
                app:tint="@color/gray"
                android:contentDescription="@string/app_name"
                />
        </FrameLayout>


        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            android:layout_weight="1"
            app:tint="@color/gray"
            android:contentDescription="@string/app_name"
            />

    </LinearLayout>

    <!-- Playlist Name -->

    <LinearLayout
        android:id="@+id/playlistLayout"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="30dp"
        android:padding="18dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutMusicControl"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="NEXT SONG"
            android:textColor="@color/light_gray"
            android:letterSpacing="0.2"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/playlistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Hai to GensÅ no Grimgar"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Playlist Button / Queue -->

    <FrameLayout
        android:id="@+id/layoutExpandPlaylist"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlistLayout"
        app:layout_constraintTop_toBottomOf="@id/layoutMusicControl">

        <View
            android:id="@+id/btnExpand"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center"
            android:background="@drawable/background_icon_center" />

        <ImageView
            android:id="@+id/btnQueue"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_expand"
            app:tint="@color/gray" />
    </FrameLayout>

    <!-- Loop Shuffle Icon -->
    <LinearLayout
        android:id="@+id/layoutFunction"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:paddingStart="18dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlistLayout"
        >

        <ImageView
            android:id="@+id/btnLoop"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_loop"
            app:tint="@color/light_gray"
            android:contentDescription="@string/app_name"
            />

        <ImageView
            android:id="@+id/btnShuffle"
            android:layout_marginStart="30dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_shuffle"
            app:tint="@color/light_gray"
            android:contentDescription="@string/app_name"
            />

    </LinearLayout>

    <!-- Song name, artist -->

    <LinearLayout
        android:id="@+id/songArtistName"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_marginStart="30dp"
        android:padding="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutFunction">

        <TextView
            android:id="@+id/songArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="K(N)oW NAME"
            android:textColor="@color/light_gray"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Icon More (Song) -->
    <ImageView
        android:id="@+id/btnMore"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/songArtistName"
        app:layout_constraintTop_toBottomOf="@id/layoutExpandPlaylist"
        app:tint="@color/light_gray"
        android:contentDescription="@string/app_name"
        />

    <!-- Start & End Time -->
    <LinearLayout
        android:id="@+id/layoutDuration"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/songArtistName"
        app:layout_constraintBottom_toTopOf="@id/seekBar">

        <TextView
            android:id="@+id/durationNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:paddingStart="10dp"
            android:fontFamily="@font/open_sans"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/durationEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:40"
            android:paddingEnd="15dp"
            android:fontFamily="@font/open_sans"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            />
    </LinearLayout>


    <!-- Seekbar -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDuration"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@drawable/bottom_nav_icon_color_selector"
        app:itemTextColor="@drawable/bottom_nav_icon_color_selector"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/menu"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>